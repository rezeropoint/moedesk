      "parameters": {
        "jsCode": "// 解析请求数据\nconst body = $input.first().json.body;\nconst { taskId, title, videoUrl, coverUrl, seriesTitle, platforms, platformContents, accountCredentials } = body;\n\nif (!taskId || !platforms?.length) {\n  throw new Error('Missing required fields: taskId or platforms');\n}\n\n// 为每个平台生成发布任务\nconst publishJobs = platforms.map(platform => {\n  const content = platformContents?.find(c => c.platform === platform) || {};\n  const credentials = accountCredentials?.[platform];\n  \n  return {\n    json: {\n      taskId,\n      platform,\n      title: content.title || title,\n      description: content.description || '',\n      hashtags: content.hashtags || [],\n      videoUrl,\n      coverUrl,\n      seriesTitle,\n      // YouTube 专属配置\n      youtubePrivacyStatus: content.youtubePrivacyStatus || 'public',\n      youtubeCategoryId: content.youtubeCategoryId || '22',\n      youtubePlaylistIds: content.youtubePlaylistIds || [],\n      youtubeThumbnailUrl: content.youtubeThumbnailUrl,\n      // 账号凭证\n      credentials,\n    }\n  };\n});\n\nreturn publishJobs;"
      },
